{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "vitest"],
    "useDefineForClassFields": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src", "tests", "prisma/seed.ts"],
  "exclude": ["dist", "node_modules"]
}
